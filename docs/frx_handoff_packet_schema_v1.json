{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "frx.handoff.packet.v1",
  "title": "FRX Handoff Packet",
  "type": "object",
  "required": [
    "packet_id",
    "producer_track",
    "consumer_track",
    "artifact_ids",
    "contract_version",
    "confidence",
    "readiness_class",
    "created_at",
    "max_wait_seconds"
  ],
  "properties": {
    "packet_id": {"type": "string", "minLength": 1},
    "producer_track": {"type": "string", "pattern": "^track-[A-Z]$"},
    "consumer_track": {"type": "string", "pattern": "^track-[A-Z]$"},
    "artifact_ids": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string", "minLength": 1}
    },
    "contract_version": {"type": "string", "minLength": 1},
    "confidence": {"type": "number", "minimum": 0, "maximum": 1},
    "readiness_class": {
      "type": "string",
      "enum": ["ready_now", "ready_next", "gated"]
    },
    "created_at": {"type": "string", "format": "date-time"},
    "max_wait_seconds": {"type": "integer", "minimum": 1},
    "notes": {"type": "string"}
  },
  "additionalProperties": false
}
