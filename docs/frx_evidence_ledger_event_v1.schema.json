{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "frx.evidence.ledger.event.v1",
  "title": "FRX Evidence Ledger Event",
  "type": "object",
  "required": [
    "schema_version",
    "claim_id",
    "evidence_id",
    "policy_id",
    "trace_id",
    "decision_id",
    "event_type",
    "action",
    "artifact_hash",
    "signer",
    "created_at"
  ],
  "properties": {
    "schema_version": {"const": "frx.evidence.ledger.event.v1"},
    "claim_id": {"type": "string", "minLength": 1},
    "evidence_id": {"type": "string", "minLength": 1},
    "policy_id": {"type": "string", "minLength": 1},
    "trace_id": {"type": "string", "minLength": 1},
    "decision_id": {"type": "string", "minLength": 1},
    "event_type": {
      "type": "string",
      "enum": [
        "compile_decision",
        "runtime_route_decision",
        "fallback_decision",
        "demotion_decision",
        "promotion_decision",
        "incident_event"
      ]
    },
    "action": {"type": "string", "minLength": 1},
    "rejected_alternatives": {
      "type": "array",
      "items": {"type": "string"}
    },
    "assumptions": {
      "type": "array",
      "items": {"type": "string"}
    },
    "calibration": {
      "type": "object",
      "properties": {
        "ece": {"type": "number"},
        "brier": {"type": "number"},
        "coverage": {"type": "number"}
      },
      "additionalProperties": false
    },
    "loss_terms": {
      "type": "object",
      "additionalProperties": {"type": "number"}
    },
    "artifact_hash": {"type": "string", "minLength": 8},
    "signature": {"type": "string"},
    "signer": {"type": "string", "minLength": 1},
    "created_at": {"type": "string", "format": "date-time"},
    "provenance": {
      "type": "object",
      "required": ["build_id", "toolchain"],
      "properties": {
        "build_id": {"type": "string"},
        "toolchain": {"type": "string"},
        "policy_bundle_hash": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
